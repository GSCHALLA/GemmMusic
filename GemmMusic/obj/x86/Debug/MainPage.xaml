<Page x:ConnectionId='1'
    x:Class="GemmMusic.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GemmMusic"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:model="using:GemmMusic.Model"
      mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Grid >
        <Grid.Background>
            <ImageBrush x:ConnectionId='2' x:Name="SelectedImage" Stretch="Uniform" Opacity="20"  />
        </Grid.Background>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <RelativePanel>

            <Button x:ConnectionId='15' Name="HamBurgerButton"
                    RelativePanel.AlignLeftWithPanel="True" Margin="0,10,0,0"
                    FontFamily="Segoe MDL2 Assets" 
                    Content="&#xE700;" Width="35"                              />

            <Button x:ConnectionId='16' Name="BackButton"
                    RelativePanel.RightOf="HamBurgerButton" Margin="0,10,0,0"                          
                    FontFamily="Segoe MDL2 Assets"
                    Content="&#xE0A6;" Width="35"/>

        </RelativePanel>

        <SplitView x:ConnectionId='3' Grid.Row="1" Name="MySplitView"
                   DisplayMode="CompactOverlay"
                   CompactPaneLength="45"
                   OpenPaneLength="200">

            <SplitView.Pane >
                <ListView x:ConnectionId='4' Name="MenuItemList" IsItemClickEnabled="True"
                                                                                             >
                    <ListView.ItemTemplate>
                        <DataTemplate                            >
                            <StackPanel x:ConnectionId='6' Orientation="Horizontal">
                                <Image x:ConnectionId='7'                            Height="35" Width="35" Margin="-8,10,0,10"/>
                                <TextBlock x:ConnectionId='8'                          FontSize="18" Margin="10,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </SplitView.Pane>
            <SplitView.Content >

                <Grid  Margin="10,20,0,0" Visibility="Visible">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <!--Search starts here-->


                    <SearchBox x:ConnectionId='9' x:Name="mySearchBox" 
                               FocusOnKeyboardInput="True"
                                                                            Width="400" Height="35" Margin="0,0,0,0"/>

                    <TextBlock x:ConnectionId='10' Name="CategoryTextBlock" Text="ALL SONGS"   
                               FontSize="24" HorizontalAlignment="Left"  FontWeight="Bold"/>

                    <!--search ends here-->

                    <MediaElement x:ConnectionId='11' Name="MyMediaElement" AutoPlay="True"/>

                    

                    <GridView x:ConnectionId='12' Grid.Row="1" 
                              Name="SoundGridView"                                    
                              IsItemClickEnabled="True"
                                                           Margin="0,0,0,0">

                        <GridView.ItemTemplate >
                            <DataTemplate                         >
                                <Image x:ConnectionId='14' Name="MyImage" Height="112" Width="101"                            />
                            </DataTemplate>
                        </GridView.ItemTemplate>

                    </GridView>
                </Grid>


            </SplitView.Content>

        </SplitView>

    </Grid>

</Page>
    
